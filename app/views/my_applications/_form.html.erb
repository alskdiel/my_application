<%= form_for(@my_application) do |f| %>
  <% if @my_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@my_application.errors.count, "error") %> prohibited this my_application from being saved:</h2>

      <ul>
      <% @my_application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="component-wrapper">
      <%= f.label :apply_type %><br>
      <%= f.select :apply_type, [["서류전형", 0], ["필기전형", 1], ["인적성", 2], ["1차 면접", 3], ["2차 면접", 4], ["3차 면접", 5]]%>
    <!-- <input type="checkbox" id="cb_apply_type"/> -->
    </div>
  </div>
  <div class="field">
    <div class="component-wrapper">
      <%= f.label :company %><br>
      <%= f.text_field :company %>
    <!-- <input type="checkbox" id="cb_company"/> -->
    </div>
  </div>

  <div class="field">
    <div class="component-wrapper">
      <%= f.label :position%><br>
      <%= f.text_field :position%>
    <!-- <input type="checkbox" id="cb_position"/> -->
    </div>
  </div>

  <div class="field">
    <div class="component-wrapper">
      <%= f.label :applied_date %><br>
      <%= f.datetime_select :applied_date %>
    <!-- <input type="checkbox" id="cb_applied_date"/> -->
    </div>
  </div>

  <div class="field">
    <div class="component-wrapper">
      <%= f.label :released_date %><br>
      <%= f.datetime_select :released_date %>
    <!-- <input type="checkbox" id="cb_released_date"/> -->
    </div>
  </div>

  <div class="field">
    <div class="component-wrapper">
      <%= f.label :result %><br>
      <%= f.check_box :result %>
    </div>
  </div>

  <div class="submit-wrapper">
    <div class="actions">
      <%= f.submit %>
    </div>
    <input type="checkbox" id="cb-ifnotrdy" name="notrdy"/>
  </div>
<% end %>
